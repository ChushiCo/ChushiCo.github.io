    <body>
        <header>
            <div id="brand">
                <img id="logo" src="img/logo.png">
                <span id="name">CHUSHI</span>
            </div>

            <div id="tabs1">
                <div><a href="home" method="get">HOME</a></div>
                <div><a href="catalog" method="get">PRODUCTS</a></div>
                <div><a href="users" method="get">USERS</a></div>
                <div><a class="selected" href="inventory" method="get">INVENTORY</a></div>
                <div><a href="orders" method="get">ORDERS</a></div>
