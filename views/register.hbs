<html>
    <head>
        <title>Register account</title>
        <meta content="text/htmlcharset=utf-8" http-equiv="Content-Type">
        <meta content="utf-8" http-equiv="encoding">
        <link href='https://fonts.googleapis.com/css?family=Montserrat' rel='stylesheet'>
        <link href='https://fonts.googleapis.com/css?family=Roboto' rel='stylesheet'>
        <link rel = "stylesheet" type = "text/css" href= "styles.css">
        <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>

    </head>

    <body>
        <header>
            <div id="brand">
                <img id="logo" src="img/logo.png">
                <span id="name">CHUSHI</span>
            </div>

            <div id="tabs1">
                <div><a href="home" method="get">HOME</a></div>
                <div><a href="catalog" method="get">PRODUCTS</a></div>
                <div><a href="about" method="get">ABOUT</a></div>
                <div><a class="selected" href="login" method="get">LOGIN</a></div>
            </div>
        </header>

        <div id="register_template">
            <h1>REGISTER</h1>
            <div class="title-line-register"></div>
            <form class="registration-form" id="register-user" method="post" action="register">
                <label>First name</label> <input class="input-register" id="registerFname" type="text" name="first_name" placeholder="Your first name" required> <br>
                <label>Last name</label> <input class="input-register" id="registerLname" type="test" name="last_name" placeholder="Your last name" required> <br>
                <label>Mobile number</label> <input class="input-register" id="registerMob" type="tel" name="mob_num" placeholder="Your contact number (start with 639)" pattern="[6]{1}[3]{1}[9]{1}[0-9]{9}" oninvalid="this.setCustomValidity('Contact number should start with 639 followed by 9 digit number')" required> <br>
                <label>Email</label> <input class="input-register" id="registerEmail" type="email" name="email" placeholder="Your email address" required> <br>
                <label>Password</label> <input class="input-register" id="registerPass" type="password" name="password" placeholder="Your password" minlength="8" required> <br>
                <label>Street Address</label> <input class="input-register" id="registerStreet" type="text" name="street" placeholder="Your street address" required> <br>
                <label>Building, Floor</label> <input class="input-register" id="registerBldg" type="text" name="bldg" placeholder="Your building and floor" required> <br>
                <label>City</label> <input class="input-register" id="registerCity" type="text" name="city" placeholder="Your city" required>

                <input class="register-btn" id="register-user-btn"type="submit" value="SUBMIT">
            </form>
            
        </div>
        

        <!-- The core Firebase JS SDK is always required and must be listed first -->
        <script src="https://www.gstatic.com/firebasejs/7.19.1/firebase-app.js"></script>

        <!-- TODO: Add SDKs for Firebase products that you want to use
            https://firebase.google.com/docs/web/setup#available-libraries -->
