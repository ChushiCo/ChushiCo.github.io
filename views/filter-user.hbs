                            <input type="text" id="searchInput10x12" class="search-txt" placeholder="Search for shushi bakes"/>
                                 
                        {{/if_equal}}



                        <a class="search-btn">
                            <i class="fas fa-search"></i> 
                        </a>
                    </div>
                 </div>
            </div>

            {{#if_equal filter "new"}}
                <div class="products">
                    <div id="product-list"></div>
                </div>
            {{/if_equal}}

            {{#if_equal filter "popular"}}
                <div class="products">
                    <div id="product-list-popular"></div>
                </div>
            {{/if_equal}}

            {{#if_equal filter "low"}}
                <div class="products">
                    <div id="product-list-low"></div>
                </div>
            {{/if_equal}}

            {{#if_equal filter "high"}}
                <div class="products">
                    <div id="product-list-high"></div>
                </div>
            {{/if_equal}}

             {{#if_equal filter "6x6"}}
                <div class="products">
                    <div id="product-list-6x6"></div>
                </div>
            {{/if_equal}}

            {{#if_equal filter "7x8"}}
                <div class="products">
                    <div id="product-list-7x8"></div>
                </div>
            {{/if_equal}}

            {{#if_equal filter "10x12"}}
                <div class="products">
