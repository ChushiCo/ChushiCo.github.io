                            <input type="hidden" id="searchInputLow" class="search-txt" placeholder="Search for shushi bakes"/>
                            <input type="text" id="searchInputHigh" class="search-txt" placeholder="Search for shushi bakes"/> 
                            <input type="hidden" id="searchInput6x6" class="search-txt" placeholder="Search for shushi bakes"/>
                            <input type="hidden" id="searchInput7x8" class="search-txt" placeholder="Search for shushi bakes"/>
                            <input type="hidden" id="searchInput10x12" class="search-txt" placeholder="Search for shushi bakes"/>    
                        {{/if_equal}}

                        {{#if_equal filter "6x6"}}
                            <input type="hidden" id="searchInput" class="search-txt" placeholder="Search for shushi bakes"/>
                            <input type="hidden" id="searchInputPopular" class="search-txt" placeholder="Search for shushi bakes"/>
                            <input type="hidden" id="searchInputLow" class="search-txt" placeholder="Search for shushi bakes"/>
