<html>
    <head>
        <title>Welcome to Chushi!</title>
        <meta content="text/htmlcharset=utf-8" http-equiv="Content-Type">
        <meta content="utf-8" http-equiv="encoding">
        <link href='https://fonts.googleapis.com/css?family=Montserrat' rel='stylesheet'>
        <link href='https://fonts.googleapis.com/css?family=Roboto' rel='stylesheet'>
        <link rel = "stylesheet" type = "text/css" href= "styles.css">

    <style>
        {{#each tracker}}
            {{#if_equal progress "Order Received"}}
                #one{
                    border: 3px solid black;
                    padding: 5px 20px;
                    width: 75%;
                    background: #FFC178;
                }
            {{/if_equal}}

            {{#if_equal progress "Preparing sushi bake"}}
                #one{
                    border: 3px solid black;
                    padding: 5px 20px;
                    width: 75%;
                    background: #FFC178;
                }
            {{/if_equal}}

            {{#if_equal progress "Delivery on its way"}}
                #one{
                    border: 3px solid black;
                    padding: 5px 20px;
                    width: 75%;
                    background: #FFC178;
                }
            {{/if_equal}}

            {{#if_equal progress "Delivered"}}
                #one{
                    border: 3px solid black;
                    padding: 5px 20px;
                    width: 75%;
                    background: #FFC178;
                }
            {{/if_equal}}


        {{/each}}
    </style>
    </head>

    <body>
        <header>
            <div id="brand">
                <img id="logo" src="img/logo.png">
                <span id="name">CHUSHI</span>
            </div>

            <div id="tabs1">
                <div><a href="home" method="get">HOME</a></div>
                <div><a href="catalog" method="get">PRODUCTS</a></div>
                <div><a class="selected" href="ordertracker" method="get">ORDER TRACKER</a></div>
                <div><a href="history" method="get">HISTORY</a></div>
                <div><a href="cart" method="get">CART</a></div>
                <div><a href="myaccount" method="get">MY ACCOUNT</a></div>
            </div>
        </header>

        <main id="tracker-main">
            <div class="tracker-header">Track Order</div>

            <div class="tracker-body">
                
                {{#each tracker}}
                    {{!-- {{#if_equal progress "Order Received"}}
                    {{/if_equal}} --}}
                    <div class="tracker-status">
                        <div class="status"  id="one">
                            <svg xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 0 24 24" width="24"><path d="M0 0h24v24H0V0zm0 0h24v24H0V0z" fill="none"/><path d="M16.59 7.58L10 14.17l-3.59-3.58L5 12l5 5 8-8zM12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8z"/></svg>
                            <div class="status-name">Order Received</div>
                        </div>
                        <div class="status" id="two">
