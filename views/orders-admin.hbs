<html>
    <head>
        <title>Chushi | Orders</title>
        <meta content="text/htmlcharset=utf-8" http-equiv="Content-Type">
        <meta content="utf-8" http-equiv="encoding">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
        <link href='https://fonts.googleapis.com/css?family=Montserrat' rel='stylesheet'>
        <link href='https://fonts.googleapis.com/css?family=Roboto' rel='stylesheet'>
        <link rel = "stylesheet" type = "text/css" href= "styles.css">
        <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    </head>

    <body>
        <header>
            <div id="brand">
                <img id="logo" src="img/logo.png">
                <span id="name">CHUSHI</span>
            </div>

            <div id="tabs1">
                <div><a href="home" method="get">HOME</a></div>
                <div><a href="catalog" method="get">PRODUCTS</a></div>
                <div><a href="users" method="get">USERS</a></div>
                <div><a href="inventory" method="get">INVENTORY</a></div>
                <div><a class="selected" href="orders" method="get">ORDERS</a></div>
                <div class="signout-tab"><a href="signout" method="get">SIGN OUT</a></div>
            </div>  
        </header>

        
        <main id="orders-main">
            <div class="orders-header">ORDERS</div>
            {{#if total_orders}}
                <div class="total-orders">Total orders: {{total_orders}}</div>
            {{/if}}

            {{#unless total_orders}}
                <div class="no-orders">No orders yet</div>
            {{/unless}}
            

            {{#each orders}}
                <div class="orders-list" id="{{id}}"  onclick="viewOrder({{@index}})">

                    <div class="order-label" id="order-number-label">Order Number</div>
                    <div class="order-detail">{{number}}</div>

                    <div class="order-label" id="order-date-label">Date and Time</div>
                    <div class="order-detail">{{time}}</div>

                    <div class="order-label" id="order-by-label">Ordered by</div>
                    <div class="order-detail">{{ordered_by}}</div>

                    <div class="order-label" id="order-item-label">Order</div>
                    <div class="order-detail">{{order}}</div>

                    <div class="order-label" id="order-address-label">Address</div>
                    <div class="order-address-detail">{{address}}</div>

                    <div class="order-label" id="order-payment-label">Payment</div>
                    <div class="order-detail">â‚±{{payment}} ({{method}})</div>

                    <div class="order-label" id="order-progress-label">Progress</div>
                    <div class="order-detail">{{progress}}</div>

                </div>

                <form id="{{@index}}" action="order" method="post">
                    <input type="hidden" name="order_id" value="{{id}}">
                </form>
            {{/each}}
            

            
        </main>

        <script src="orders-admin.js"></script>
    </body>
</html>